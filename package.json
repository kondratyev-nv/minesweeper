{
  "name": "minesweeper",
  "version": "0.0.3",
  "description": "Minesweeper game",
  "scripts": {
    "test": "mocha-webpack --webpack-config webpack.test.config.js \"test/**/*Test.js\"",
    "start": "webpack-dev-server -p --config webpack.config.js --open",
    "watch-test": "mocha-webpack --watch --webpack-config webpack.test.config.js \"test/**/*Test.js\"",
    "coverage": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm run test",
    "dist": "webpack -p"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kondratyev-nv/minesweeper.git"
  },
  "keywords": [
    "javascript",
    "minesweeper",
    "ghpages",
    "browser-game"
  ],
  "author": "Nikolay Kondratyev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kondratyev-nv/minesweeper/issues"
  },
  "homepage": "https://github.com/kondratyev-nv/minesweeper",
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.7.0",
    "mocha": "^6.1.4",
    "mocha-webpack": "^2.0.0-beta.0",
    "nyc": "^14.1.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-node-externals": "^1.7.2"
  }
}
