{
  "name": "minesweeper",
  "version": "0.0.2",
  "description": "Minesweeper game",
  "main": "Application.js",
  "scripts": {
    "test": "mocha-webpack --webpack-config webpack.test.config.js \"test/**/*Test.js\"",
    "cover": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm run test",
    "watch_test": "mocha-webpack --watch --webpack-config webpack.test.config.js \"test/**/*Test.js\"",
    "build": "webpack -p",
    "watch_buid": "webpack --watch",
    "clean": "rimraf dist/*"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kondratyev-nv/minesweeper.git"
  },
  "keywords": [
    "javascript",
    "minesweeper",
    "ghpages",
    "browser-game"
  ],
  "author": "Nikolay Kondratyev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kondratyev-nv/minesweeper/issues"
  },
  "homepage": "https://github.com/kondratyev-nv/minesweeper#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.18",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "mocha": "^4.1.0",
    "mocha-webpack": "^1.0.1",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  }
}
